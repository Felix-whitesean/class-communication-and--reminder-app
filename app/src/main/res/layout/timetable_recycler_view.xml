<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:id="@+id/timetable_container"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/session1"
            android:layout_width="100dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/rectangle_13_shape"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/session2"
                android:textColor="#09ED13"
                android:textSize="16dp"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:id="@+id/session2_class"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/session3"
                android:textColor="#08FDD1"
                android:padding="3dp"
                android:textSize="16dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:id="@+id/session3_class"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/session4"
                android:textColor="#F9C719"
                android:padding="3dp"
                android:textSize="16dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:id="@+id/session4_class"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/session5"
                android:textColor="#FFFFFF"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:textSize="16dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:id="@+id/session5_class"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/session6"
                android:textColor="#FF6C01"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:textSize="16dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:id="@+id/session6_class"/>
        </LinearLayout>
    </LinearLayout>
    <View   android:id="@+id/line_5"
        android:background="@drawable/line_5_shape"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
